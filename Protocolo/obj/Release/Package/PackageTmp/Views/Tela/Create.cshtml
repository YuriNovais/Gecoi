@model Protocolo.Models.Tela

@{
    ViewBag.Title = "Criando tela";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb" style="margin-left: -30px; margin-right: -30px;">
            <li>
                <a href="@Url.Action("Home", "Protocolo")">
                    <i class="fa fa-home fa-fw"></i>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Tela")">
                    Telas
                </a>
            </li>
            <li class="active">

            </li>
        </ol>
        <h1 class="page-header"></h1>
        @{ Html.RenderPartial("_Alerts"); }
    </div>
</div>

<div class="row">
    <div class="col-lg-10">

        <div class="card card-primary">
            <div class="card-header">
                <h4 class="page-header">@ViewBag.Title</h4>
            </div>

            <div class="row">
                @using (Html.BeginForm("Create", "Tela", FormMethod.Post, new { id = "Id" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="col-lg-12">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-10">
                                    <div class="form-group required">
                                        @Html.LabelFor(model => model.Descricao, new { @class = "control-label" })
                                        @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Descricao, string.Empty, new { @class = "text-danger" })


                                        @Html.LabelFor(model => model.SistemaId, "Sistema", new { @class = "control-label" })
                                        @Html.DropDownListFor(model => model.SistemaId, null, " ", htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.SistemaId, string.Empty, new { @class = "text-danger" })

                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="form-group text-center">
                                    <input type="submit" value="Salvar" class="btn btn-outline btn-primary confirmation-action" />
                                    <input type="button" value="Cancelar" class="btn btn-outline btn-primary" onclick="location.href='@Url.Action("Index", "Tela")'" />


                                </div>
                            </div>
                        </div>
                    </div>





                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
