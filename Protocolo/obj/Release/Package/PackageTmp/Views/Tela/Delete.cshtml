@model Protocolo.Models.Tela

@{
    ViewBag.Title = "Apagando Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb" style="margin-left: -30px; margin-right: -30px;">
            <li>
                <a href="@Url.Action("Home", "Protocolo")">
                    <i class="fa fa-home fa-fw"></i> Home
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Tela")">
                    Telas
                </a>
            </li>
            <li class="active">
                @ViewBag.Title
            </li>
        </ol>
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>

<div class="row">
    <div class="row">
        @using (Html.BeginForm("Delete", "Tela", FormMethod.Post, new { id = "TelaForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="col-lg-12">
                <div class="panel-body">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Descricao)
                                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.SistemaId, "Cliente")
                                @Html.DropDownListFor(model => model.SistemaId, null, "--Selecione--", htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group text-center">
                                <input type="submit" value="Excluir" class="btn btn-outline btn-danger confirmation-action" />
                                <input type="button" value="Cancelar" class="btn btn-outline btn-primary" onclick="location.href='@Url.Action("Index", "Tela")'" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @{ Html.RenderPartial("_Alerts"); }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}