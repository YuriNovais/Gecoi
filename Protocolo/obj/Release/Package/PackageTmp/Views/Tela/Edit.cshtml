@model Protocolo.Models.Tela

@{
    ViewBag.Title = "Editar Tela";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb" style="margin-left: -30px; margin-right: -30px;">
            <li>
                <a href="@Url.Action("Home", "Protocolo")">
                    <i class="fa fa-home fa-fw"></i>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Tela")">
                    Telas
                </a>
            </li>
            <li class="active">

            </li>
        </ol>
        <h1 class="page-header"></h1>
        @{ Html.RenderPartial("_Alerts"); }
    </div>
</div>


<div class="card card-primary">
    <div class="card-header">
        <h4 class="page-header">@ViewBag.Title</h4>
    </div>

    @using (Html.BeginForm("Edit", "Tela", FormMethod.Post, new { id = "TelaForm" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Id)

        <div class="col-lg-10">
            <div class="panel-body">
                <div class="row">

                    <div class="col-lg-1">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Id)
                            @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Descricao)
                            @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="col-lg-8">
                        @Html.LabelFor(model => model.SistemaId, "Sistema", new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.SistemaId, null, " ", htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.SistemaId, string.Empty, new { @class = "text-danger" })
                    </div>


                    <div class="col-lg-12">
                        <div class="form-group text-center">

                            <input type="submit" value="Salvar" class="btn btn-outline btn-primary confirmation-action" />
                            <input type="button" value="Cancelar" class="btn btn-outline btn-primary" onclick="location.href='@Url.Action("Index", "Tela")'" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

</div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
