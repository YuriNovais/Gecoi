@model IEnumerable<Protocolo.Models.Cliente>

@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/FrontEnd/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}
<div class="row">
    <div class="col-lg-12">
        <ol class="text-white bg-secondary" style="margin-left: -30px; margin-right: -30px;">

            <h4 class="page-header">&nbsp;&nbsp;&nbsp;&nbsp;@ViewBag.Title</h4>

        </ol>

        @{ Html.RenderPartial("_Alerts"); }
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading text-right" style="padding-right: 30px;">
                <input type="button" value="Cadastrar" class="btn btn-outline btn-primary" onclick="location.href='@Url.Action("Create", "Cliente")'" />
            </div>
            <br />
            <div class="panel-body">
                <div class="col-lg-12">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-setor">
                        <thead>
                            <tr>
                                <th class="p-3 mb-2 bg-info text-gray-dark">
                                    N°
                                </th>
                                <th class="p-3 mb-2 bg-info text-white">
                                    @Html.DisplayNameFor(model => model.RazaoSocial)
                                </th>
                                <th class="p-3 mb-2 bg-info text-white">
                                    @Html.DisplayNameFor(model => model.Fantasia)
                                </th>

                                <th class="p-3 mb-2 bg-info text-white">
                                    @Html.DisplayNameFor(model => model.Cidade)
                                </th>


                                <th class="p-3 mb-2 bg-info text-white">
                                    Açoes
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @ProtocoloHelper.Truncate(item.RazaoSocial, 50)
                                    </td>
                                    <td>
                                        @ProtocoloHelper.Truncate(item.Fantasia, 50)
                                    </td>
                                    <td>
                                        @ProtocoloHelper.Truncate(item.Cidade, 40)
                                    </td>





                                    <td class="text-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-info btn-group-sm" title="Alterar" onclick="location.href = '@Url.Action("Edit", "Cliente", new { id = item.Id })'"><i class="fa fa-pencil-alt"></i></button>
                                            <button type="button" class="btn btn-default" title="Visualizar" onclick="location.href = '@Url.Action("Details", "Cliente", new { id = item.Id })'"><i class="fa fa-search-plus"></i></button>
                                            <button type="button" class="btn btn-danger" title="Excluir" onclick="location.href = '@Url.Action("Delete", "Cliente", new { id = item.Id })'"><i class="fas fa-trash-alt"></i></button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

            $(document).ready(function () {
                $('#dataTables-setor').dataTable({
                    "language": {
                        "url": "@Url.Content("~/Content/JSON/datatables-portugues.json")"
                    },
                    "lengthMenu": [[10, 15, 25, 50], [10, 15, 25, 50]],
                    'order': [[1, 'asc']]
                });
            });
          $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
          "paging": true,
          "lengthChange": false,
          "searching": false,
          "ordering": true,
          "info": true,
          "autoWidth": false,
        });
      });


    </script>


    <!-- DataTables -->
    <script src="~/FrontEnd/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/FrontEnd/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>


}

