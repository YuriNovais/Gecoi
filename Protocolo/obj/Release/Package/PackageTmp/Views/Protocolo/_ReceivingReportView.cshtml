@model Protocolo.Models.Lote

<div class="modal-body">

    <div class="col-md-12" style="margin-bottom: 20px;">

        <table class="table table-condensed">
            <tr>
                <td class="grid-report text-center" style="border: 1px solid #000;">
                    @if (Model.Instituicao == null)
                    {
                        <h3>TERMO DE RECEBIMENTO DE PROCESSOS</h3>
                        <div style="float: left; padding-left: 150px; padding-right: 300px;">
                            Data: @Html.Raw(Model.DataAbertura.ToString("dd/MM/yyyy"))
                        </div>
                        <div>
                            Hora: @Html.Raw(Model.DataAbertura.ToString("HH:mm:ss"))
                        </div>
                    }
                    else
                    {
                        <img src="~/Instituicao/ViewLogomarca" width="85" height="90" alt="Logomarca" title="Logomarca" style="float: left;" />
                        <div style="width: 900px;">
                            <h2 style="margin: 10px;">@Html.Raw(Model.Instituicao.Nome)</h2>
                            <h3 style="margin-top: 0;">TERMO DE RECEBIMENTO DE PROCESSOS</h3>
                            <div style="float: left; padding-left: 50px;">
                                Data: @Html.Raw(Model.DataAbertura.ToString("dd/MM/yyyy"))
                            </div>
                            <div style="float: right;">
                                Hora: @Html.Raw(Model.DataAbertura.ToString("HH:mm:ss"))
                            </div>
                        </div>
                    }
                </td>
            </tr>
        </table>

    </div>

    <div class="col-md-12">

        <table class="table">
            <tr>
                <td class="grid-report" colspan="2" style="border-top: 1px solid #000;">
                    Id. Lote<br />
                    @Html.Raw(Model.Id)
                </td>
                <td class="grid-report" colspan="5" style="border-top: 1px solid #000;">
                    Local de Origem<br />
                    @Html.Raw(Model.SetorOrigem.Nome)
                </td>
                <td class="grid-report" colspan="2" style="border-top: 1px solid #000;">
                    Data<br />
                    @Html.Raw(Model.DataAbertura.ToString("dd/MM/yyyy"))
                </td>
                <td class="grid-report" colspan="3" style="border-top: 1px solid #000;">
                    Usuário<br />
                    @Html.Raw(Model.UsuarioAbertura.Nome)
                </td>
            </tr>
            <tr>
                <td class="grid-report" colspan="5">
                    Local de Destino<br />
                    @Html.Raw(Model.SetorDestino.Nome)
                </td>
                <td class="grid-report" colspan="7">
                    Data e Assinatura do responsável no departamento de destino<br /><br />
                    ___/___/_____    _____________________________________________________
                </td>
            </tr>
        </table>

        <table class="table">
            <tr>
                <th style="border-bottom: none; border-top: 1px solid #000;" class="text-center">Ano</th>
                <th style="border-bottom: none; border-top: 1px solid #000;" class="text-center">Número</th>
                <th style="border-bottom: none; border-top: 1px solid #000;" class="text-center">Chave</th>
                <th style="border-bottom: none; border-top: 1px solid #000;">Data</th>
                <th style="border-bottom: none; border-top: 1px solid #000;">Assunto</th>
                <th style="border-bottom: none; border-top: 1px solid #000;">Requerente</th>
            </tr>
            @foreach (var protocolo in Model.Protocolos)
            {
                <tr>
                    <td style="border-top: 1px dashed;" class="text-center">@Html.Raw(protocolo.Ano)</td>
                    <td style="border-top: 1px dashed;" class="text-center">@Html.Raw(protocolo.Numero)</td>
                    <td style="border-top: 1px dashed;" class="text-center">@Html.Raw(protocolo.Chave)</td>
                    <td style="border-top: 1px dashed;">@Html.Raw(protocolo.DataAbertura.ToString("dd/MM/yyyy"))</td>
                    <td style="border-top: 1px dashed;">@Html.Raw(protocolo.Assunto.Descricao)</td>
                    <td style="border-top: 1px dashed;">@Html.Raw(protocolo.Pessoa.NomeRazao)</td>
                </tr>
            }

            <tr>
                <td style="border-top: 1px dashed;" class="text-right" colspan="12">
                    @Html.Raw(Model.Protocolos.Count()) PROCESSO(S)
                </td>
            </tr>
        </table>
    </div>
</div>