            <tr>
                <td style="border-left: 1px solid #000; border-right: 1px solid #000; border-bottom: 1px solid #000;">DESCRIÇÃO: @Html.Raw(Model.Descricao)</td>
            </tr>
            <tr>
                <td style="border-left: 1px solid #000; border-right: 1px solid #000; border-bottom: 1px solid #000;">Status: @Html.Raw(Model.DescricaoStatus)</td>
