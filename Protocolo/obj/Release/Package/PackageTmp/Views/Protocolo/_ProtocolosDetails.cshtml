@model List<Protocolo.Models.Protocolo>

<div class="modal-header">
    <h2 class="modal-title">Protocolos no Lote</h2>
</div>

<div class="modal-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="panel-body">
                    <div class="col-lg-12">
                        <table class="table table-striped table-bordered table-hover">
                            <tr>
                                <th class="col-md-2 text-center">
                                    @Html.DisplayName("Número/Ano")
                                </th>
                                <th class="col-md-4">
                                    @Html.DisplayName("Assunto")
                                </th>
                                <th class="col-md-" 5>
                                    @Html.DisplayName("Descrição")
                                </th>
                                <th class="col-md-1"></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.NumeroAno)
                                    </td>
                                    <td>
                                        @ProtocoloHelper.Truncate(item.Assunto.Descricao, 30)
                                    </td>
                                    <td>
                                        @ProtocoloHelper.Truncate(item.Descricao, 30)
                                    </td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-primary btn-circle" title="Visualizar" aria-label="Visualizar" onclick="location.href = '@Url.Action("Visualizar", "Protocolo", new { id = item.Id })'">
                                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </table>

                        <div class="text-center">
                            <button id="modal-fechar" type="button" class="btn btn-outline btn-primary" data-dissmiss="modal" onclick="hideModal();">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Fechar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>