@model Protocolo.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8" />
    <title>Login</title>




    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>GecoiWeb - Controle Interno</title>

    <!-- Tell the browser to be responsive to screen width-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome-->
    <link rel="stylesheet" href="~/FrontEnd/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons-->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style-->
    <link rel="stylesheet" href="~/FrontEnd/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro-->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

<link rel="stylesheet" type="text/css" href="~/Content/css/tela.css">

</head>

<body>


    <div id="login-conteiner">
        <div class="conteiner"></div>

        <div class="imguser">
            <div><img class="imguser1" src="~/Content/Images/oie_transparent.png" alt="LOGO GECOI EXITO"></div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @using (Html.BeginForm("Login", "Usuario", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { autocomplete = "off" }))
        {
            @Html.AntiForgeryToken()

            <fieldset>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Logon, htmlAttributes: new { @class = "form-control", @placeholder = "Logon", @autofocus = "" })
                    @Html.ValidationMessageFor(model => model.Logon, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(model => model.Senha, htmlAttributes: new { @class = "form-control", @placeholder = "Senha" })
                    @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                </div>
                <input type="submit" value="Acessar" class="btn btn-lg Secondary btn-block" />
            </fieldset>


        }
    </div>

    </div>
    
</body>


</html>