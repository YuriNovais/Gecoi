@model Protocolo.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>GecoiWeb - Controle Interno</title>

    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/FrontEnd/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/FrontEnd/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <div class="card card-widget widget-user">
                <!-- Add the bg color to the header using any of the bg-* classes -->
                <div class="widget-user-header bg-info">
                    <h3 class="widget-user-username">GECOI</h3>
                    <h5 class="widget-user-desc">Gestão e Controle Interno de Atendimentos</h5>
                </div>
                <div class="widget-user-image">
                    <img class="img-circle elevation-2" src="~/Content/Images/LogoExito.png" alt="User Avatar">
                </div>
                <div class="card-footer">
                    <div class="row">

                    </div>
                    <!-- /.row -->
                </div>
            </div>
        </div>
        <!-- /.col -->
        <div class="col-md-4">
        </div>
    </div>
    <div id="wrapper">

        <div class="col-md-4">
        </div>

        <!-- /.widget-user -->
        <div class="card card-info col-md-4">
            <div class="card-header">
                <h2 class="card-title">Efetue o login</h2>
            </div>
            <div class="panel-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @using (Html.BeginForm("Login", "Usuario", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()

                    <fieldset>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Logon, htmlAttributes: new { @class = "form-control", @placeholder = "Logon", @autofocus = "" })
                            @Html.ValidationMessageFor(model => model.Logon, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.Senha, htmlAttributes: new { @class = "form-control", @placeholder = "Senha" })
                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                        </div>
                        <input type="submit" value="Login" class="btn btn-lg btn-success btn-block" />
                    </fieldset>


                }
            </div>
        </div>

    </div>
    

    <!-- jQuery -->
    <script src="~/FrontEnd/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/FrontEnd/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/FrontEnd/dist/js/adminlte.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/metisMenu")
    @Scripts.Render("~/bundles/sbAdmin2")
    @Scripts.Render("~/bundles/jqueryval")

</body>
</html>