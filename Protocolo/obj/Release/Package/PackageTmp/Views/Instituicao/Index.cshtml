@model Protocolo.Models.InstituicaoModel

@{
    ViewBag.Title = "Instituição";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb" style="margin-left: -30px; margin-right: -30px;">
            <li>
                <a href="@Url.Action("Home", "Protocolo")">
                    <i class="fa fa-home fa-fw"></i> Home
                </a>
            </li>
            <li class="active">
                @ViewBag.Title
            </li>
        </ol>
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>

<div class="row">
    <div class="row">
        @using (Html.BeginForm("Index", "Instituicao", FormMethod.Post, new { id = "instituicaoForm", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Logomarca)
            @Html.HiddenFor(model => model.NomeLogomarca)
            @Html.HiddenFor(model => model.TipoLogomarca)

            <div class="col-lg-12">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group required">
                                @Html.LabelFor(model => model.Nome, new { @class = "control-label" })
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nome, string.Empty, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group required">
                                @Html.LabelFor(model => model.RazaoSocial, new { @class = "control-label" })
                                @Html.EditorFor(model => model.RazaoSocial, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.RazaoSocial, string.Empty, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group required">
                                @Html.LabelFor(model => model.CNPJ, new { @class = "control-label" })
                                @Html.EditorFor(model => model.CNPJ, new { htmlAttributes = new { @class = "form-control", @mask = "99.999.999/9999-99" } })
                                @Html.ValidationMessageFor(model => model.CNPJ, string.Empty, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.InscricaoEstadual, new { @class = "control-label" })
                                @Html.EditorFor(model => model.InscricaoEstadual, new { htmlAttributes = new { @class = "form-control", @mask = "99999999999999" } })
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group required">
                                @Html.LabelFor(model => model.Endereco, new { @class = "control-label" })
                                @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Endereco, string.Empty, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Complemento, new { @class = "control-label" })
                                @Html.EditorFor(model => model.Complemento, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Bairro, new { @class = "control-label" })
                                @Html.EditorFor(model => model.Bairro, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.CEP, new { @class = "control-label" })
                                @Html.EditorFor(model => model.CEP, new { htmlAttributes = new { @class = "form-control", @mask = "99999-999" } })
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.UFId, new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.UFId, null, "-- Selecione--", htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.MunicipioId, new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.MunicipioId, null, "-- Selecione--", htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Telefone, new { @class = "control-label" })
                                @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", @mask = "(99)9999-9999?9" } })
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Fax, new { @class = "control-label" })
                                @Html.EditorFor(model => model.Fax, new { htmlAttributes = new { @class = "form-control", @mask = "(99)9999-9999?9" } })
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, string.Empty, new { @class = "text-danger" })
                            </div>
                        </div>

                        @if (Model.Logomarca != null)
                        {
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.Label("Logomarca atual", new { @class = "control-label" })
                                    <img src="~/Instituicao/ViewLogomarca" alt="Logomarca" title="Logomarca" style="display: block;" />
                                </div>
                            </div>
                        }

                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.Label("Selecionar Logomarca", new { @class = "control-label" })
                                <input type="file" id="Logo" name="Logo" class="form-control" />
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group text-center">
                                <input type="button" value="Salvar" class="btn btn-outline btn-primary confirmation-action" />
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {

            applyMaxLength();

            $('#UFId').cascade({
                url: '@Url.Action("GetMunicipios")',
                paramName: 'UFId',
                childSelect: $('#MunicipioId')
            });

        });
    </script>
}
