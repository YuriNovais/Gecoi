@helper Truncate(string input, int length)
{
    if (input != null) { 
        if (input.Length <= length)
        {
            @input
        }
        else
        {
            <span title="@input">@input.Substring(0, length)<text>...</text></span>
        }
    }
} 

@helper CalendarIcon()
{
    <span class="input-group-addon">
        <span class="fa fa-calendar"></span>
    </span>
}