@model IEnumerable<Protocolo.Models.Sistema>

@{
    ViewBag.Title = "Sistema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb" style="margin-left: -30px; margin-right: -30px;">
            <li>
                <a href="@Url.Action("Home", "Protocolo")">
                    <i class="fa fa-home fa-fw"></i>
                </a>
            </li>
            <li class="active">
                @ViewBag.Title
            </li>
        </ol>
        <h1 class="page-header">@ViewBag.Title</h1>
        @{ Html.RenderPartial("_Alerts"); }
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading text-right" style="padding-right: 30px;">
                <input type="button" value="Cadastrar" class="btn btn-outline btn-primary" onclick="location.href='@Url.Action("Create", "Sistema")'" />
            </div>
            <div class="panel-body">
                <div class="col-lg-12">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-setor">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Sigla)
                                </th>
                                <th>
                                    Ações
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @ProtocoloHelper.Truncate(item.Nome, 50)
                                    </td>
                                    <td>
                                        @ProtocoloHelper.Truncate(item.Sigla, 45)
                                    </td>

                                    <td class="text-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-info btn-group-sm" title="Alterar" onclick="location.href = '@Url.Action("Edit", "Sistema", new { id = item.Id })'"><i class="fa fa-pencil-alt"></i></button>
                                            <button type="button" class="btn btn-default" title="Visualizar" onclick="location.href = '@Url.Action("Details", "Sistema", new { id = item.Id })'"><i class="fa fa-search-plus"></i></button>
                                            <button type="button" class="btn btn-danger" title="Excluir" onclick="location.href = '@Url.Action("Delete", "Sistema", new { id = item.Id })'"><i class="fas fa-trash-alt"></i></button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

    @section Scripts {
        <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTables-setor').dataTable({
                "language": {
                    "url": "@Url.Content("~/Content/JSON/datatables-portugues.json")"
                },
                "lengthMenu": [[10, 15, 25, 50], [10, 15, 25, 50]],
                'order': [[1, 'asc']]
            });
        });
        </script>
    }
