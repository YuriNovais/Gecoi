@model Protocolo.Models.Motivo
@using Protocolo.Helpers;

@{
    ViewBag.Title = "Excluir Motivo";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/FrontEnd/plugins/fontawesome-free/css/all.min.css">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/FrontEnd/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    <!-- Toastr -->
    <link rel="stylesheet" href="~/FrontEnd/plugins/toastr/toastr.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/FrontEnd/dist/css/adminlte.min.css">

}


<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb" style="margin-left: -30px; margin-right: -30px;">
            <li>
                <a href="@Url.Action("Home", "Protocolo")">
                    <i class="fa fa-home fa-fw"></i> Home
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Motivo")">
                    Motivos
                </a>
            </li>
        </ol>
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>

<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">@ViewBag.Title</h3>
    </div>
    <div class="row-border">
        @using (Html.BeginForm("Delete", "Motivo", FormMethod.Post, new { id = "motivoForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="col-lg-12">
                <div class="panel-body">
                    <div class="row">

                        <div class="col-lg-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.id)
                                @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                            </div>
                        </div>

                        <div class="col-lg-10">
                            <div class="form-group">
                                @Html.LabelFor(model => model.descricao)
                                @Html.EditorFor(model => model.descricao, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group text-center">
                                <input type="submit" value="Excluir" class="btn btn-outline btn-danger confirmation-action" />
                                <input type="button" value="Cancelar" class="btn btn-outline btn-primary" onclick="location.href='@Url.Action("Index", "Motivo")'" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @{ Html.RenderPartial("_Alerts"); }

</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
