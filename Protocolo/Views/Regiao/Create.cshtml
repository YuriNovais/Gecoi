@model Protocolo.Models.Regiao

@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb" style="margin-left: -30px; margin-right: -30px;">
            <li>
                <a href="@Url.Action("Home", "Protocolo")">
                    <i class="fa fa-home fa-fw"></i> Home
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Regiao")">
                    Regiões
                </a>
            </li>
            <li class="active">
                @ViewBag.Title
            </li>
        </ol>
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>

<div class="row">
    <div class="row">
        @using (Html.BeginForm("Cadastrar", "Regiao", FormMethod.Post, new { id = "regiaoForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="col-lg-12">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group required">
                                @Html.LabelFor(model => model.Descricao, new { @class = "control-label" })
                                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Descricao, string.Empty, new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="col-lg-12">
                            <div class="form-group text-center">
                                <input type="submit" value="Salvar" class="btn btn-outline btn-primary confirmation-action" />
                                <input type="button" value="Cancelar" class="btn btn-outline btn-primary" onclick="location.href='@Url.Action("Index", "Regiao")'" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
